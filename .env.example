# SECURITY: Never commit the actual .env file to version control!
# Copy this file to .env and fill in the values

# Application Settings
APP_NAME=Jade SmartBank
APP_VERSION=1.0.0
DEBUG=false

# SECURITY: JWT Configuration
# Generate a strong secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# SECURITY: Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true

# SECURITY: Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Database Configuration (for Docker Compose with psycopg2)
# Using postgresql:// (not postgresql+asyncpg://) since we're using psycopg2-binary
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/jade_smartbank
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=INFO

# Docker PostgreSQL Settings (used by docker-compose.yml)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=jade_smartbank
